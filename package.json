{
  "name": "express-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa:gen": "npm run tsoa:spec && npm run tsoa:routes",
    "dev": "npm run tsoa:gen && ts-node-dev --respawn --transpile-only --pretty src/index.ts",
    "watch:tsoa": "chokidar \"src/controllers/**/*.ts\" -c \"npm run tsoa:routes\"",
    "dev:all": "concurrently \"npm run watch:tsoa\" \"npm run dev\"",
    "build": "npm run tsoa:gen && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\""
  },
  "author": "Chandra M. Pandey",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.15.3",
    "nodemon": "^3.1.11",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "ts-node-dev": "^2.0.0",
    "tsoa": "^6.6.0",
    "typescript": "^5.9.3"
  }
}
